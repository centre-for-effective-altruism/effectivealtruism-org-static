extends ./page

block contentWrapper
    mixin divider
        .row
            .col-md-10.col-md-offset-1
                hr.home-section-divider
    section#content-wrapper
        .container
            include ./layout/warnings
        h1.page-title.sr-only!= title
        .home-content
            .container
                section.home-section.home-section-hero
                    .row
                        .col-md-6.col-md-offset-3
                            != contents
                            .center
                                a.btn.btn-primary.home-section-hero-learn-more(href="/articles/introduction-to-effective-altruism" id=slug+"-intro-learn-more-button") Learn more&hellip;
            .home-alternate-background
                .container
                    .row
                        .col-xs-10.col-xs-offset-1.col-md-5.col-md-offset-1
                            section.home-section.home-section-ea-funds
                                h2 Donate more effectively&nbsp;#[br.visible-md.visible-lg]using&nbsp;evidence
                                p Manage your donation portfolio with EA Funds.
                                a.btn.btn-default(href='https://app.effectivealtruism.org/funds' id=slug+"-ea-funds-button") Donate now
                        .col-xs-10.col-xs-offset-1.visible-xs.visible-sm
                            hr.home-section-divider
                        .col-xs-10.col-xs-offset-1.col-md-5.col-md-offset-0
                            section.home-section.home-section-newsletter-signup
                                h2 Join the effective&nbsp;#[br.visible-xs.visible-md.visible-lg]altruism&nbsp;newsletter
                                p (Around one email per month, no spam)
                                include ./components/newsletter-signup
            .container
                .row
                    .col-md-5.col-md-offset-1
                        section.home-section
                            h2.home-section-title EA Concepts
                                a.home-section-read-more-link(href="https://concepts.effectivealtruism.org") Browse concepts...
                            a(href="https://concepts.effectivealtruism.org")
                                img(src='https://images.contentful.com/8zinz198djg3/dw7dh5FKakIWsimEiMKok/d67d9941fe66804764d7d86d5859cd5c/EA-Concepts---Logo-Horizontal.png')
                            p Effective altruism is a collection of concepts, drawn from a range of academic disciplines. See how they relate to each other at the new #[a(href="https://concepts.effectivealtruism.org") EA Concepts site].
                            .center
                                a.btn.btn-default(href="https://concepts.effectivealtruism.org") Browse EA Concepts
                                    i.fa.fa-sitemap
                    .col-md-5
                        section.home-section
                            h2.home-section-title EA Grants
                                a.home-section-read-more-link(href="https://podcast.effectivealtruism.org" target="_blank") Apply...
                            a(href="https://www.effectivealtruism.org/grants")
                                img(src='https://images.contentful.com/ohf186sfn6di/4HPHeLSMxyUAomo0acYQGk/04fb544c02acaf357ac9ba81ca4da3fd/EA-Grants-Logo-Horizontal-Colour.png')
                            p Effective Altruism Grants are grants to assist individuals to work on promising, high-impact projects.
                            .center
                                a.btn.btn-default(href="https://www.effectivealtruism.org/grants") Apply Now
                                    i.fa.fa-text-o

            .container
                .row
                    .col-md-5.col-md-offset-1
                        section.home-section.home-section-key-ideas
                            h2.home-section-title Reading
                                a.home-section-read-more-link(href="/resources/" id=slug+"-reading-read-more") Read more...
                            ul.home-section-key-ideas-list.list-unstyled
                                each child in seriesSet['articles'].children.slice(0,8)
                                    li.home-section-key-ideas-idea
                                        if child.type === 'article'
                                            a(href=child.file.canonical id=slug+"-reading-"+child.file.slug)
                                                != child.file.title
                                        if child.type === 'link'
                                            a(href=child.file.url target="_blank" id=slug+"-reading-"+slugify(child.file.url))
                                                != child.file.title
                                            | &nbsp;#[i.fa.fa-external-link]

                    .col-md-5
                        section.home-section.home-section-effective-altruist-profiles
                            h2.home-section-title!= seriesSet['featured-effective-altruists'].file.title
                                a.home-section-read-more-link(href="/community-profiles/" id=slug+"-community-profiles-read-more") Read more...
                            .row
                                each child in seriesSet['featured-effective-altruists'].children
                                    .col-xs-6.col-sm-3.home-section-effective-altruist-profiles-profile
                                        a(href=child.file.canonical id=slug+"-reading-"+child.file.slug)
                                            .home-section-effective-altruist-profiles-profile-image-wrapper
                                                .content
                                                    img.img-responsive.home-section-effective-altruist-profiles-profile-image(src=child.file.photo.fields.file.url)
                                            p.home-section-effective-altruist-profiles-profile-title!= child.file.title
                +divider
                section.home-section.home-section-quotations
                    .row
                        .col-md-10.col-md-offset-1
                            .row
                                each child in seriesSet['quotations-on-effective-altruism'].children
                                    - var quotation = child.file
                                    .col-md-6
                                        include ./components/quotation
                section.home-section.home-section-media
                    .row
                        .col-md-10.col-md-offset-1
                            h2.home-section-title Effective altruism in the media
                                a.home-section-read-more-link(href="/media/" id="home-link-readmore-media") More...
                            include ./components/media-highlights