mixin includeChild (item,index,numbering)
	- var file = item.file
	- var file = item.file
	case item.type
		when 'article'
			include ./series-article
		when 'page'
			include ./series-article
		when 'organisation'
			include ./series-organisation
		when 'link'
			include ./series-link

if seriesSlug && seriesSet[seriesSlug] && seriesSet[seriesSlug].children.length
	each child,index in seriesSet[seriesSlug].children
		if child.type === 'series'
			section.series(id='series-'+child.file.slug)
				h2.series-title!= child.file.title
				.series-description
					!= child.file.contents
				each seriesChild,index in child.children
					+includeChild(seriesChild,index,useNumbering)
		else
			+includeChild(child,index,useNumbering)